<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="10.0" styleClass="card-list-root" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.scenes.CardListCtrl">
   <children>
      <TextField fx:id="title" styleClass="subtitle" text="List Name" />
      <ScrollPane hbarPolicy="NEVER" styleClass="card-container-root" VBox.vgrow="ALWAYS">
         <content>
            <VBox fx:id="cardsContainer" alignment="CENTER" maxWidth="1.7976931348623157E308" spacing="10.0" />
         </content>
      </ScrollPane>
      <BorderPane>
         <left>
            <Button mnemonicParsing="false" onAction="#addCard" styleClass="button-1" text="Add a card " BorderPane.alignment="CENTER" />
         </left>
         <right>
            <Button mnemonicParsing="false" onAction="#deleteCardList" styleClass="button-1" text="Remove" BorderPane.alignment="CENTER" />
         </right>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </BorderPane>
   </children>
</VBox>
