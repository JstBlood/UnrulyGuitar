         <content>
            <VBox fx:id="tagsBar" prefHeight="251.0" prefWidth="146.0" />
         </content>
      </ScrollPane>
      <Button layoutX="13.0" layoutY="379.0" mnemonicParsing="false" onAction="#back" text="Back" />
      <ScrollPane fitToHeight="true" fitToWidth="true" layoutX="14.0" layoutY="273.0" prefHeight="94.0" prefWidth="422.0">
