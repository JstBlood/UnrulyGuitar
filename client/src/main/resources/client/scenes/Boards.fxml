                        <Insets />
                     </VBox.margin>
                  </Button>
               </children>
            </VBox>
         </children>
      </VBox>
      <VBox alignment="TOP_CENTER" spacing="20.0" styleClass="section">
         <children>
            <Label styleClass="subtitle" text="Or create  one" />
            <VBox alignment="CENTER" VBox.vgrow="ALWAYS">
               <children>
                  <Button mnemonicParsing="false" onAction="#list" styleClass="button-1" text="Create a board" />
               </children>
            </VBox>
         </children>
      </VBox>
  </items>
    <stylesheets>
        <URL value="@/client/css/mainStyle.css" />
